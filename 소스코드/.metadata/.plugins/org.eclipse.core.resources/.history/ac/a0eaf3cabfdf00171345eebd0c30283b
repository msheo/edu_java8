		for (int i = 0; i < corps.size(); i++) {
			// for 기본문은 병렬 처리는 할 수 없는 구조 -> 인덱스 순서대로 처리
			// idx를 관리해야 함
			// 따라서 iterator가 하나의 대안
		}
		
		Iterator iterator = corps.iterator();
		while(iterator.hasNext()) {
			//iterator.next();
			// 외부 순환자를 이용
		}
		
		// 병력(5) 모두 attack() 호출
		
	}

}
